<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.phonegap.exchangeapp" version="1.0.0">
  <name>eXCHANGE</name>
  <description>Hello World sample application that responds to the deviceready event.</description>
  <author href="http://phonegap.com" email="support@phonegap.com">Bunker07</author>
  <content src="index.html"/>

  <preference name="permissions" value="none"/>
  <preference name="orientation" value="default"/>
  <preference name="target-device" value="universal"/>
  <preference name="fullscreen" value="false"/>
  <preference name="webviewbounce" value="true"/>
  <preference name="prerendered-icon" value="true"/>
  <preference name="stay-in-webview" value="false"/>
  <preference name="ios-statusbarstyle" value="black-opaque"/>
  <preference name="detect-data-types" value="true"/>
  <preference name="exit-on-suspend" value="false"/>
  <preference name="show-splash-screen-spinner" value="true"/>
  <preference name="auto-hide-splash-screen" value="true"/>
  <preference name="disable-cursor" value="false"/>
  <preference name="android-minSdkVersion" value="14"/>
  <preference name="android-installLocation" value="auto"/>

  <platform name="ios|winphone|wp8|android" />
  
    <icon src="icon.png"/>
 <!--<icon src="www/res/icon/android/icon-36-ldpi.png" gap:platform="android" gap:qualifier="ldpi"/>
  <icon src="www/res/icon/android/icon-48-mdpi.png" gap:platform="android" gap:qualifier="mdpi"/>
  <icon src="www/res/icon/android/icon-72-hdpi.png" gap:platform="android" gap:qualifier="hdpi"/>
  <icon src="www/res/icon/android/icon-96-xhdpi.png" gap:platform="android" gap:qualifier="xhdpi"/>--> 
  
		<icon src="icon.png" gap:platform="ios" width="76" height="76" />
		<icon src="icon.png" gap:platform="ios" width="120" height="120" />
		<icon src="icon.png" gap:platform="ios" width="152" height="152" />
		<icon src="icon.png" gap:platform="android" gap:density="ldpi" />
		<icon src="icon.png" gap:platform="android" gap:density="mdpi" />
		<icon src="icon.png" gap:platform="android" gap:density="hdpi" />
		<icon src="icon.png" gap:platform="android" gap:density="xhdpi" />
		<icon src="icon.png" gap:platform="android" gap:density="xxhdpi" />
		<icon src="icon.png" gap:platform="android" gap:density="xxxhdpi" />
		<icon src="icon.png" gap:platform="winphone" />
		<icon src="icon.png" gap:platform="winphone" gap:role="background" />
		<icon src="icon.png" />
  
  
		<gap:splash src="www/img/LOGO_eXCHANGE_AZUL.png" gap:platform="android" gap:density="ldpi" />
		<gap:splash src="www/img/LOGO_eXCHANGE_AZUL.png" gap:platform="android" gap:density="mdpi" />
		<gap:splash src="www/img/LOGO_eXCHANGE_AZUL.png" gap:platform="android" gap:density="hdpi" />
		<gap:splash src="www/img/LOGO_eXCHANGE_AZUL.png" gap:platform="android" gap:density="xhdpi" />
		<gap:splash src="www/img/LOGO_eXCHANGE_AZUL.png" gap:platform="android" gap:density="xxhdpi" />
		<gap:splash src="www/img/LOGO_eXCHANGE_AZUL.png" gap:platform="winphone" />
		<gap:splash src="www/splash.png" />


  <gap:plugin name="cordova-plugin-camera" spec="2.1.1" />
  <gap:plugin name="cordova-plugin-device" spec="1.1.1" />
  <gap:plugin name="cordova-plugin-file-transfer" spec="1.5.0" />
  <gap:plugin name="cordova-plugin-geolocation" spec="2.1.0" />
  <gap:plugin name="cordova-plugin-whitelist" spec="1.2.1" />
  <gap:plugin name="org.apache.cordova.network-information" spec="1.2.0" />



  <!--<feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
    <feature name="http://api.phonegap.com/1.0/camera"/>-->

  <meta http-equiv="Content-Security-Policy" content="default-src 'self' data: gap: https://ssl.gstatic.com; style-src 'self' 'unsafe-inline'; media-src *"/>

    <access origin="*" subdomains="true" />
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>


  <platform name="ios">
    <preference name="phonegap-version" value="3.9.1" />
    <preference name="orientation" value="portrait" />
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>

  <platform name="android">
    <preference name="phonegap-version" value="4.1.1" />
    <preference name="orientation" value="portrait" />
    <allow-intent href="market:*"/>
  </platform>

  <platform name="winphone">
    <preference name="phonegap-version" value="3.8.1" />
    <preference name="orientation" value="portrait" />
  </platform>

  <platform name="wp8">
    <preference name="phonegap-version" value="3.8.1" />
    <preference name="orientation" value="portrait" />
  </platform>
  
</widget>